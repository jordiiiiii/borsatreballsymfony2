{% extends 'base.html.twig' %}

{% block title %}Registres index{% endblock %}

{% block body %}
    <h1>Registres index</h1>

    <table class="table">
        <thead>
        <tr>
            <th>Id</th>
            <th>Correu</th>
            <th>Ip</th>
            <th>Data</th>
            <th>Nom</th>
            <th>Cognom1</th>
            <th>Cognom2</th>
            <th>Id Oferta</th>
        </tr>
        </thead>
        <tbody>
        {% for registre in registres %}
            <tr>
                <td>{{ registre.id }}</td>
                <td>{{ registre.correu }}</td>
                <td>{{ registre.ip }}</td>
                <td>{{ registre.data }}</td>
                <td>{{ registre.nom }}</td>
                <td>{{ registre.cognom1 }}</td>
                <td>{{ registre.cognom2 }}</td>
                <td><a href="{{ path('oferta_show', {'id': registre.getOfertaId.id}) }}">{{ registre.getOfertaId.id }}</a></td>
            </tr>
        {% else %}
            <tr>
                <td colspan="8">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <h1>Track index</h1>

    <table class="table">
        <thead>
        <tr>
            <th>Id</th>
            <th>Ip</th>
            <th>Data</th>
        </tr>
        </thead>
        <tbody>
        {% for track in tracks %}
            <tr>
                <td>{{ track.id }}</td>
                <td>{{ track.ip }}</td>
                <td>{{ track.data }}</td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

{% endblock %}
