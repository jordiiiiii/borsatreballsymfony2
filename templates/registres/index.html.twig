{% extends 'base.html.twig' %}

{% block title %}Registres index{% endblock %}

{% block body %}
    <h1>Registres index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Correu</th>
                <th>Ip</th>
                <th>Data</th>
                <th>Nom</th>
                <th>Cognom1</th>
                <th>Cognom2</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for registre in registres %}
            <tr>
                <td>{{ registre.id }}</td>
                <td>{{ registre.correu }}</td>
                <td>{{ registre.ip }}</td>
                <td>{{ registre.data }}</td>
                <td>{{ registre.nom }}</td>
                <td>{{ registre.cognom1 }}</td>
                <td>{{ registre.cognom2 }}</td>
                <td>
                    <a href="{{ path('registres_show', {'id': registre.id}) }}">show</a>
                    <a href="{{ path('registres_edit', {'id': registre.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="8">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('registres_new') }}">Create new</a>
{% endblock %}
